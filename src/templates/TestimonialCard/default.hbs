<div class="rounded-lg bg-card text-card-foreground p-6 shadow-sm">
  <blockquote class="text-lg text-card-foreground">
    "{{quote}}"
  </blockquote>
  <div class="mt-4 flex items-center gap-4">
    <div class="h-12 w-12 overflow-hidden rounded-full">
      <img
        src="{{avatarUrl}}"
        alt="Avatar de {{authorName}}"
        class="h-full w-full object-cover"
      />
    </div>
    <div>
      <h4 class="font-semibold text-foreground">{{authorName}}</h4>
      <p class="text-sm text-muted-foreground">{{authorRole}}</p>
    </div>
  </div>
</div> 