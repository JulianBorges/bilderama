<div class="relative rounded-lg border {{#if featured}}border-primary{{else}}border-border{{/if}} bg-card p-8 shadow-sm text-card-foreground">
  {{#if featured}}
  <p class="absolute top-0 -translate-y-1/2 rounded-full bg-primary px-3 py-1 text-sm font-semibold text-primary-foreground">Mais Popular</p>
  {{/if}}
  <h3 class="text-lg font-semibold text-foreground">{{planName}}</h3>
  <p class="mt-2 text-sm text-muted-foreground">{{planDescription}}</p>
  <div class="mt-4 flex items-baseline">
    <span class="text-4xl font-bold text-foreground">{{price}}</span>
    <span class="ml-1 text-muted-foreground">/{{billingCycle}}</span>
  </div>
  <ul class="mt-6 space-y-4">
    {{#each features}}
      <li class="flex items-center">
        <svg class="h-5 w-5 {{#if this.included}}text-primary{{else}}text-muted-foreground{{/if}}" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{#if this.included}}M5 13l4 4L19 7{{else}}M6 18L18 6M6 6l12 12{{/if}}" />
        </svg>
        <span class="ml-3 text-muted-foreground">{{this.name}}</span>
      </li>
    {{/each}}
  </ul>
  <button class="mt-8 w-full rounded-lg px-4 py-2 font-semibold {{#if featured}}bg-primary text-primary-foreground hover:bg-primary/90{{else}}bg-secondary text-secondary-foreground hover:bg-secondary/90{{/if}}">
    {{ctaText}}
  </button>
</div> 