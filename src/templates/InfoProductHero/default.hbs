<div class="bg-background text-foreground">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      
      <!-- Coluna da Imagem -->
      <div class="order-last md:order-first">
        <img src="{{safeImg coverImageUrl}}" alt="Capa do produto" class="rounded-lg shadow-2xl w-full">
      </div>

      <!-- Coluna do ConteÃºdo -->
      <div class="text-center md:text-left">
        <h1 class="text-4xl font-extrabold text-foreground sm:text-5xl md:text-6xl">
          {{title}}
        </h1>
        <p class="mt-6 text-lg text-muted-foreground">
          {{description}}
        </p>
        
        <ul class="mt-8 space-y-4 text-left inline-block">
          {{#each benefits}}
          <li class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-primary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <p class="ml-3 text-base text-foreground">{{this}}</p>
          </li>
          {{/each}}
        </ul>

        <div class="mt-10">
          <a href="#" class="inline-block bg-primary text-primary-foreground font-bold text-lg px-8 py-4 rounded-lg shadow-lg transform transition-transform hover:scale-105 hover:bg-primary/90">
            {{ctaText}}
          </a>
        </div>
      </div>

    </div>
  </div>
</div> 