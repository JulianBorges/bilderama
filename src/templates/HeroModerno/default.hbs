<section class="relative h-[90vh] w-full overflow-hidden bg-primary text-primary-foreground">
  <div class="container mx-auto flex h-full flex-col items-center justify-center px-4 text-center">
    <h1 class="mb-6 text-5xl font-bold tracking-tight text-primary-foreground md:text-7xl" data-bild-block-index="{{blockIndex}}" data-bild-prop="title">
      {{title}}
    </h1>
    <p class="mb-8 max-w-2xl text-lg text-primary-foreground/90" data-bild-block-index="{{blockIndex}}" data-bild-prop="subtitle">
      {{subtitle}}
    </p>
    <div class="flex gap-4">
      <button class="rounded-full bg-primary-foreground px-8 py-3 font-semibold text-primary transition hover:bg-primary-foreground/90" data-bild-block-index="{{blockIndex}}" data-bild-prop="ctaPrimary">
      {{ctaPrimary}}
      </button>
      <button class="rounded-full border border-primary-foreground px-8 py-3 font-semibold text-primary-foreground transition hover:bg-primary-foreground/10" data-bild-block-index="{{blockIndex}}" data-bild-prop="ctaSecondary">
      {{ctaSecondary}}
      </button>
    </div>
  </div>
</section> 