<section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-primary to-primary/80 text-primary-foreground overflow-hidden {{designTokens designTokens}}">
  <!-- Background decorativo -->
  <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="40" height="40" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.05"%3E%3Ccircle cx="20" cy="20" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-20"></div>
  
  <!-- Separador curvo superior -->
  <svg class="absolute top-0 left-0 w-full h-16 text-primary/30" viewBox="0 0 1440 74" fill="currentColor" preserveAspectRatio="none" aria-hidden="true">
    <path d="M0,32L48,37.3C96,43,192,53,288,53.3C384,53,480,43,576,42.7C672,43,768,53,864,58.7C960,64,1056,64,1152,58.7C1248,53,1344,43,1392,37.3L1440,32L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z" />
  </svg>

  <div class="container mx-auto flex min-h-screen flex-col items-center justify-center px-6 md:px-8 lg:px-10 py-16 text-center relative z-10">
    <div class="max-w-4xl mx-auto space-y-8">
      <h1 class="text-4xl font-bold tracking-tight text-primary-foreground sm:text-5xl md:text-6xl lg:text-7xl animate-in slide-in-from-bottom-4 duration-1000 {{themePersonality theme}}" {{editableAttr prop="title"}}>
        {{title}}
      </h1>
      <p class="max-w-2xl mx-auto text-lg text-primary-foreground/90 sm:text-xl animate-in slide-in-from-bottom-4 duration-1000 delay-200" {{editableAttr prop="subtitle"}}>
        {{subtitle}}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-in slide-in-from-bottom-4 duration-1000 delay-400">
        <a href="{{ctaHref}}" class="group inline-flex items-center justify-center rounded-full bg-primary-foreground px-8 py-4 text-lg font-semibold text-primary transition-all duration-300 hover:bg-primary-foreground/90 hover:scale-105 hover:shadow-2xl focus:outline-none focus:ring-2 focus:ring-primary-foreground/50 focus:ring-offset-2 focus:ring-offset-primary" {{editableAttr prop="ctaText"}}>
          {{ctaText}}
          <svg class="ml-2 h-5 w-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </div>
  
  <!-- Separador curvo inferior -->
  <svg class="absolute bottom-0 left-0 w-full h-16 text-primary/30" viewBox="0 0 1440 74" fill="currentColor" preserveAspectRatio="none" aria-hidden="true">
    <path d="M0,42L48,37.3C96,32,192,22,288,16C384,11,480,11,576,21.3C672,32,768,53,864,58.7C960,64,1056,53,1152,48C1248,43,1344,43,1392,42.7L1440,42L1440,74L1392,74C1344,74,1248,74,1152,74C1056,74,960,74,864,74C768,74,672,74,576,74C480,74,384,74,288,74C192,74,96,74,48,74L0,74Z" />
  </svg>

  <!-- Elementos decorativos flutuantes -->
  <div class="absolute top-20 right-20 w-32 h-32 bg-primary-foreground/10 rounded-full blur-2xl animate-pulse hidden lg:block"></div>
  <div class="absolute bottom-20 left-20 w-48 h-48 bg-primary-foreground/5 rounded-full blur-3xl animate-pulse hidden lg:block"></div>
</section> 