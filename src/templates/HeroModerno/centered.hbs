<section class="py-16 bg-background text-foreground">
  <div class="container mx-auto px-4">
    <div class="flex min-h-[80vh] items-center justify-center text-center">
      <div class="max-w-3xl space-y-8">
        <div class="mx-auto mb-8 h-2 w-24 bg-primary rounded-full"></div>
        
        <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl" data-bild-block-index="{{blockIndex}}" data-bild-prop="title">
          {{title}}
        </h1>
        
        <p class="mx-auto max-w-2xl text-lg text-muted-foreground sm:text-xl" data-bild-block-index="{{blockIndex}}" data-bild-prop="subtitle">
          {{subtitle}}
        </p>
        
        <div class="flex justify-center pt-4">
          <a href="{{ctaHref}}" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-all duration-300" data-bild-block-index="{{blockIndex}}" data-bild-prop="ctaText">
            {{ctaText}}
          </a>
        </div>
      </div>
    </div>
  </div>
</section> 