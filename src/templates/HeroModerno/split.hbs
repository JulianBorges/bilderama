<section class="py-16 bg-background text-foreground">
  <div class="container mx-auto px-4">
    <div class="grid min-h-screen items-center lg:grid-cols-2 gap-12">
      <!-- Coluna de texto -->
      <div class="space-y-8">
        <div class="space-y-6">
          <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl" data-bild-block-index="{{blockIndex}}" data-bild-prop="title">
            {{title}}
          </h1>
          
          <p class="text-lg text-muted-foreground sm:text-xl max-w-lg" data-bild-block-index="{{blockIndex}}" data-bild-prop="subtitle">
            {{subtitle}}
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="{{ctaHref}}" class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-all duration-300" data-bild-block-index="{{blockIndex}}" data-bild-prop="ctaText">
            {{ctaText}}
            <svg class="ml-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Coluna visual -->
      <div class="relative">
        <div class="aspect-square rounded-2xl bg-gradient-to-br from-primary/20 to-accent/20 flex items-center justify-center">
          <div class="text-center space-y-4">
            <div class="mx-auto h-24 w-24 rounded-full bg-primary/20 flex items-center justify-center">
              <svg class="h-12 w-12 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <p class="text-sm text-muted-foreground">Inovação & Tecnologia</p>
          </div>
        </div>
        
        <!-- Elementos decorativos -->
        <div class="absolute -top-4 -right-4 h-24 w-24 rounded-full bg-primary/10"></div>
        <div class="absolute -bottom-4 -left-4 h-16 w-16 rounded-full bg-accent/10"></div>
      </div>
    </div>
  </div>
</section> 