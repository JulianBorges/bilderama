<section class="relative h-[90vh] w-full overflow-hidden bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500">
  <div class="container mx-auto flex h-full flex-col items-center justify-center px-4 text-center">
    <h1 class="mb-6 text-5xl font-bold tracking-tight text-white md:text-7xl" data-bild-block-index="{{blockIndex}}" data-bild-prop="title">
      {{title}}
    </h1>
    <p class="mb-8 max-w-2xl text-lg text-white/90" data-bild-block-index="{{blockIndex}}" data-bild-prop="subtitle">
      {{subtitle}}
    </p>
    <div class="flex gap-4">
      <button class="rounded-full bg-white px-8 py-3 font-semibold text-indigo-600 transition hover:bg-white/90" data-bild-block-index="{{blockIndex}}" data-bild-prop="ctaPrimary">
      {{ctaPrimary}}
      </button>
      <button class="rounded-full border border-white px-8 py-3 font-semibold text-white transition hover:bg-white/10" data-bild-block-index="{{blockIndex}}" data-bild-prop="ctaSecondary">
      {{ctaSecondary}}
      </button>
    </div>
  </div>
</section> 