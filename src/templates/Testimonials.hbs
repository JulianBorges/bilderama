<section class="py-20 px-6">
  <div class="container mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-4" data-bild-block-index="{{bildBlockIndex}}" data-bild-prop="title">{{title}}</h2>
    <p class="text-lg text-muted-foreground max-w-3xl mx-auto mb-12" data-bild-block-index="{{bildBlockIndex}}" data-bild-prop="subtitle">{{subtitle}}</p>
    <div class="grid md:grid-cols-3 gap-8 text-left">
      {{#each testimonials}}
      <div class="bg-secondary/50 p-6 rounded-lg">
        <p class="italic mb-4">"{{quote}}"</p>
        <p class="font-bold">{{author}}</p>
        <p class="text-sm text-muted-foreground">{{role}}</p>
      </div>
      {{/each}}
    </div>
  </div>
</section> 