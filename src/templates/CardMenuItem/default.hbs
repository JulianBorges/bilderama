<div class="bg-card text-card-foreground rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105">
  <img src="{{imageUrl}}" alt="Imagem de {{name}}" class="w-full h-48 object-cover">
  <div class="p-4">
    <h3 class="text-xl font-bold text-card-foreground">{{name}}</h3>
    <p class="text-muted-foreground mt-2">{{description}}</p>
    <div class="mt-4 text-lg font-semibold text-primary">
      {{price}}
    </div>
  </div>
</div> 