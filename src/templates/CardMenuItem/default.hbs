<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105">
  <img src="{{imageUrl}}" alt="Imagem de {{name}}" class="w-full h-48 object-cover">
  <div class="p-4">
    <h3 class="text-xl font-bold text-gray-900 dark:text-white">{{name}}</h3>
    <p class="text-gray-600 dark:text-gray-300 mt-2">{{description}}</p>
    <div class="mt-4 text-lg font-semibold text-indigo-600 dark:text-indigo-400">
      {{price}}
    </div>
  </div>
</div> 