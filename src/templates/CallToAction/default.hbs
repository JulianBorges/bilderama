<section class="bg-primary text-primary-foreground">
  <div class="container mx-auto max-w-4xl px-4 py-16 text-center lg:py-24">
    <h2 class="text-3xl font-bold tracking-tight text-primary-foreground sm:text-4xl" data-bild-block-index="{{blockIndex}}" data-bild-prop="title">
      {{title}}
    </h2>
    <p class="mt-4 text-lg text-primary-foreground/80" data-bild-block-index="{{blockIndex}}" data-bild-prop="subtitle">
      {{subtitle}}
    </p>
    <div class="mt-8">
      <a href="#" class="inline-block rounded-full bg-primary-foreground px-8 py-3 font-semibold text-primary shadow-lg transition hover:bg-primary-foreground/90 hover:scale-105" data-bild-block-index="{{blockIndex}}" data-bild-prop="buttonText">
        {{buttonText}}
      </a>
    </div>
  </div>
</section> 