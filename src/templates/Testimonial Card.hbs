<div class="rounded-2xl bg-gray-100 p-6 shadow-sm dark:bg-gray-800/50">
  <blockquote class="text-lg text-gray-700 dark:text-gray-300" data-bild-block-index="{{blockIndex}}" data-bild-prop="quote">
    "{{quote}}"
  </blockquote>
  <div class="mt-4 flex items-center gap-4">
    <div class="h-12 w-12 overflow-hidden rounded-full">
      <img
        src="{{avatarUrl}}"
        alt="Avatar de {{authorName}}"
        class="h-full w-full object-cover"
      />
    </div>
    <div>
      <h4 class="font-semibold text-gray-900 dark:text-white" data-bild-block-index="{{blockIndex}}" data-bild-prop="authorName">{{authorName}}</h4>
      <p class="text-sm text-gray-600 dark:text-gray-400" data-bild-block-index="{{blockIndex}}" data-bild-prop="authorRole">{{authorRole}}</p>
    </div>
  </div>
</div> 