<section class="bg-background text-foreground py-16">
  <div class="container mx-auto px-4">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl" data-bild-block-index="{{blockIndex}}" data-bild-prop="title">{{title}}</h2>
      <p class="mt-4 text-lg text-muted-foreground" data-bild-block-index="{{blockIndex}}" data-bild-prop="subtitle">{{subtitle}}</p>
    </div>
    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {{#each featureCards}}
        {{> CardFeature}}
      {{/each}}
    </div>
  </div>
</section> 