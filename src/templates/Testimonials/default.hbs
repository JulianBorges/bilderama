<section class="bg-white py-16 dark:bg-gray-950">
  <div class="container mx-auto px-4">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl" data-bild-block-index="{{blockIndex}}" data-bild-prop="title">{{title}}</h2>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-400" data-bild-block-index="{{blockIndex}}" data-bild-prop="subtitle">{{subtitle}}</p>
    </div>
    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {{#each items}}
        {{> TestimonialCard}}
      {{/each}}
    </div>
  </div>
</section> 