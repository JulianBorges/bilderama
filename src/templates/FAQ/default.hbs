<section class="bg-background {{designTokens designTokens}}">
  <div class="mx-auto max-w-3xl px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">{{title}}</h2>
      <p class="mt-4 text-lg leading-8 text-muted-foreground">{{subtitle}}</p>
    </div>
    <div class="mt-12 space-y-8">
      {{#each questions}}
      <div class="border-b border-border pb-6">
        <h3 class="text-lg font-semibold leading-7 text-foreground">{{this.question}}</h3>
        <p class="mt-2 text-base leading-7 text-muted-foreground">{{this.answer}}</p>
      </div>
      {{/each}}
    </div>
  </div>
</section>