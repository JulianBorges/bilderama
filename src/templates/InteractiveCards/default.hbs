<section class="py-20 bg-background transform-3d">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16 fade-in">
      <h2 class="text-4xl md:text-6xl font-bold mb-4 text-foreground" data-bild-block-index="{{blockIndex}}" data-bild-prop="title">
        {{title}}
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto" data-bild-block-index="{{blockIndex}}" data-bild-prop="subtitle">
        {{subtitle}}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {{#each cards}}
      <div class="card-3d group relative">
        <div class="glass-effect rounded-3xl p-8 h-full shadow-elevation hover:shadow-glow transition-all duration-500 border border-border/20">
          <!-- Icon/Image -->
          <div class="mb-6 relative">
            {{#if icon}}
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-primary to-accent flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="{{icon}}"/>
              </svg>
            </div>
            {{/if}}
            {{#if image}}
            <img src="{{image}}" alt="{{title}}" class="w-full h-48 object-cover rounded-2xl mb-4 group-hover:scale-105 transition-transform duration-300">
            {{/if}}
          </div>

          <!-- Content -->
          <h3 class="text-2xl font-bold mb-4 text-foreground group-hover:text-primary transition-colors duration-300">
            {{title}}
          </h3>
          <p class="text-muted-foreground mb-6 leading-relaxed">
            {{description}}
          </p>

          <!-- Features List -->
          {{#if features}}
          <ul class="space-y-2 mb-6">
            {{#each features}}
            <li class="flex items-center text-sm text-muted-foreground">
              <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              {{this}}
            </li>
            {{/each}}
          </ul>
          {{/if}}

          <!-- CTA Button -->
          {{#if ctaText}}
          <button class="w-full bg-gradient-to-r from-primary to-accent text-primary-foreground font-semibold py-3 px-6 rounded-xl transition-all duration-300 hover:scale-105 hover:shadow-lg">
            {{ctaText}}
          </button>
          {{/if}}

          <!-- Hover effect overlay -->
          <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-primary/5 to-accent/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>