<footer class="bg-secondary text-secondary-foreground">
  <div class="container mx-auto px-4 py-8">
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      <div>
        <h3 class="text-lg font-bold text-foreground">{{companyName}}</h3>
        <p class="mt-2 text-muted-foreground">{{companyDescription}}</p>
      </div>
      {{#each linkSections}}
      <div>
        <h4 class="font-semibold text-foreground">{{this.title}}</h4>
        <ul class="mt-4 space-y-2">
          {{#each this.links}}
          <li><a href="#" class="text-muted-foreground hover:text-foreground">{{this}}</a></li>
          {{/each}}
        </ul>
      </div>
      {{/each}}
    </div>
    <div class="mt-8 flex flex-col items-center justify-between border-t border-border pt-6 sm:flex-row">
      <p class="text-sm text-muted-foreground">{{copyrightText}}</p>
      <div class="mt-4 flex gap-4 sm:mt-0">
        {{#each socialLinks}}
        <a href="#" class="text-muted-foreground hover:text-foreground">
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="{{this.iconSvgPath}}" clip-rule="evenodd" /></svg>
        </a>
        {{/each}}
    </div>
    </div>
  </div>
</footer> 