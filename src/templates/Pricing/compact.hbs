<section class="py-16 bg-background text-foreground {{designTokens designTokens}}">
  <div class="container mx-auto px-4">
    <div class="text-center space-y-4 mb-12">
      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl {{themePersonality theme}}" data-bild-block-index="{{blockIndex}}" data-bild-prop="title">
        {{title}}
      </h2>
      <p class="mx-auto max-w-2xl text-lg text-muted-foreground" data-bild-block-index="{{blockIndex}}" data-bild-prop="subtitle">
        {{subtitle}}
      </p>
    </div>
    
    <div class="flex flex-col lg:flex-row gap-4 max-w-5xl mx-auto">
      {{#each plans}}
      <div class="relative flex-1 bg-card text-card-foreground border rounded-lg p-6 {{#if featured}}ring-2 ring-primary shadow-lg scale-105{{else}}shadow-sm{{/if}} transition-all duration-300 hover:shadow-md">
        {{#if featured}}
        <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
          <span class="bg-primary text-primary-foreground px-4 py-1 rounded-full text-sm font-medium">
            {{featuredText}}
          </span>
        </div>
        {{/if}}
        
        <div class="text-center space-y-4">
          <!-- Plan name -->
          <h3 class="text-xl font-bold" data-bild-block-index="{{../blockIndex}}" data-bild-plan-index="{{@index}}" data-bild-prop="planName">
            {{planName}}
          </h3>
          
          <!-- Price -->
          <div class="space-y-1">
            <p class="text-3xl font-bold text-primary" data-bild-block-index="{{../blockIndex}}" data-bild-plan-index="{{@index}}" data-bild-prop="price">
              {{price}}
            </p>
            <p class="text-sm text-muted-foreground" data-bild-block-index="{{../blockIndex}}" data-bild-plan-index="{{@index}}" data-bild-prop="billingCycle">
              {{billingCycle}}
            </p>
          </div>
          
          <!-- Description -->
          <p class="text-sm text-muted-foreground" data-bild-block-index="{{../blockIndex}}" data-bild-plan-index="{{@index}}" data-bild-prop="planDescription">
            {{planDescription}}
          </p>
          
          <!-- CTA Button -->
          <button class="w-full py-3 px-6 rounded-lg font-semibold transition-all duration-300 {{#if featured}}bg-primary text-primary-foreground hover:bg-primary/90{{else}}bg-secondary text-secondary-foreground hover:bg-secondary/80{{/if}}" data-bild-block-index="{{../blockIndex}}" data-bild-plan-index="{{@index}}" data-bild-prop="ctaText">
            {{ctaText}}
          </button>
        </div>
        
        <!-- Features (simplified for compact) -->
        <div class="mt-6 pt-6 border-t">
          <ul class="space-y-2 text-sm">
            {{#each features}}
            {{#if included}}
            <li class="flex items-center text-muted-foreground">
              <svg class="h-4 w-4 text-primary mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              {{name}}
            </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section> 